<!-- サブタイトル -->
<%= provide(:title, "お問い合わせ") %>
<!-- ヘッダ -->
<%= render 'shared/header' %>

<!-- 本文 -->
<div id="main">
	<div id="cust_body">
		<h3>お問い合わせ</h3>
		<p>「お問い合わせの前にFAQとか見てね！」みたいな注意書き。<br>注意1<br>注意2<br>注意3</p>
		<table style="text-align: left" cellspacing="0" >
			<tr>
				<th>カテゴリ<span class="must">必須</span></th>
				<td>
					<select>
					<option value = ""></option>
					<option value = "交換について">交換について</option>
					<option value = "2">2</option>
					<option value = "3">3</option>
					<option value = "4">4</option>
					<option value = "その他">その他</option>
					</select>
				</td>
			</tr>
			<tr>
				<th>お問い合わせ内容<span class="must">必須</span></th>
				<td>
					<textarea name="INQ_CONTENT" rows="10" cols="70" wrap="soft">お問い合わせ内容をご記入ください。</textarea>
				</td>
			</tr>
			<tr>
				<th>お名前(漢字)<span class="must">必須</span></th>
				<td><input type="name" name="INQ_NAME" value="" size="30" maxlength="40">　
				<input type="text" name="EU_LNAME" value="" size="30" maxlength="40"></td>
			</tr>
			<tr>
				<th>フリガナ(全角カナ)<span class="must">必須</span></th>
				<td><input type="name" name="INQ_NAME_KANA" value="" size="30" maxlength="40">　
				<input type="text" name="EU_KLNAME" value="" size="30" maxlength="40"></td>
			</tr>
			<tr>
				<th>メールアドレス<span class="must">必須</span><br>(半角英数字)</th>
				<td><input type="name" name="INQ_MAIL" value="" size="60" maxlength="80"></td>
			</tr>
			<tr>
				<th>性別</th>
				<td>
					<nobr><input type="radio" id="male" name="INQ_SEX" value="男性"><label for="male">男性</label></nobr>
					<nobr><input type="radio" id="female" name="INQ_SEX" value="女性"><label for="female">女性</label></nobr>
				</td>
			</tr>
			<tr>
				<th>電話番号<br>(半角数字)</th>
				<td><input type="text" name="INQ_TEL1" value="" size="8" maxlength="6"> -
				<input type="text" name="INQ_TEL2" value="" size="8" maxlength="4"> -
				<input type="text" name="INQ_TEL3" value="" size="8" maxlength="4"></td>
			</tr>
		</table>
		<p id="btn_area">
			<input type="button" class="big_btn" value="内容確認" onClick="location.href='./confirm.html'">
			<input type="reset" name="submit" value="入力内容クリア">
		</p>
	</div>
</div><!-- 本文 ここまで -->
