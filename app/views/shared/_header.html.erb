<% login = 1%>
<div id="head">
	<h1 id="head_image">
		<a href="../../../../top/"><img src="/assets/title_ico.png" alt="「ホンダナ」のトップに移動する"></a>
	</h1>


<header>
  <nav>
      <%= link_to "新規会員登録", new_member_path %> |
      <%= link_to "ログイン", signin_path %>
  </nav>
</header>
<!-- エラー表示領域 -->
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>


<!-- Amazon API -->
<div>
  <%= form_tag :controller => 'search', :action => 'index' do %>
    <%= text_field_tag 'keyword', @keyword %>
    <%= submit_tag '検索' %>
  <% end %>
</div>
<div>
  <% if @res.present? %>
    <ul style="list-style: none;">
      <% @res.items.each do |i| %>
        <li style="clear: both;">
          <div style="width: 150px;float: left;text-align:center;">
            <%= link_to i.get('DetailPageURL') do %>
              <%= image_tag i.get('SmallImage/URL'), {:style => 'border: none;'} %>
            <% end %>
          </div>
          <div style="width: 150px; float: left;"><%= i.get('ASIN') %></div>
          <div style="width: 150px; float: left;"><%= i.get('ItemAttributes/Title') %></div>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>

	<div id="navigate"><!-- 右ブロック -->
		<p class="box">
			<% if login == 1 %>
			<a href="../../../../account/">
			<% else %>
			<a href="../../../../login/">
			<% end %>
			<img src="/assets/mypage_ico.png" alt="マイページ"></a></p>
		<p class="box"><a href="../../../../information/outline/service/"><img src="/assets/this_is_ico.png" alt="このサイトについて"></a></p>
		<div id="head_right">
			<% if login == 1 %>
			<p>テストユーザ さん</p>
			<p>現在 0 ブク です　<a href="#">ログアウト</a></p>
			<% else %>
			<p>ホンダナにようこそ！</p>
			<p><a href="../../../../login/">ログイン</a>　<a href="../../../../login/new_account.html">新規会員登録</a></p>
			<% end %>
		</div>

		<!-- 検索バー -->
<%= render 'shared/searchBar' %>
	</div>
</div>

<% if login == 1 %>
<!-- ログイン時表示メニュー -->
<div id="member_nav">
	<p><a href="../../../../account/profile/">プロフィール</a></p>
	<p><a href="../../../../trade/">交換一覧</a></p>
	<p><a href="../../../../information/members/notice.html">会員向け告知</a></p>
</div>
<% end %>
