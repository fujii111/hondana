<%= form_for(@bookinfo) do |f| %>
  <% if @bookinfo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bookinfo.errors.count, "error") %> prohibited this bookinfo from being saved:</h2>

      <ul>
      <% @bookinfo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "タイトル" %><br>
    <%= f.text_field :name, value: @title %>
  </div>
  <div class="field">
    <%= f.label "出版社" %><br>
    <%= f.text_field :publisher, value: @publisherName %>
  </div>
  <div class="field">
    <%= f.label "著者" %><br>
    <%= f.text_field :author, value: @author %>
  </div>
  <div class="field">
    <%= f.label "言語" %><br>
    <%= f.text_field :langage %>
  </div>
  <div class="field">
    <%= f.label "発売日" %><br>
    <!--<%= f.date_select :release_date ,start_year:1930 ,end_year:Time.now.year-1, value: @salesDate %>-->
    <%= f.text_field :srelease_date, value: @salesDate %>
  </div>
  <%= f.label "寸法" %><br>
  <div class="field">
    <%= f.label "縦" %>
    <%= f.text_field :height %>
  </div>
  <div class="field">
    <%= f.label "横" %>
    <%= f.text_field :width %>
  </div>
  <div class="field">
    <%= f.label "厚さ" %>
    <%= f.text_field :thinck %>
  </div>
  <div class="field">
    <%= f.label "ISBN" %><br>
    <%= f.text_field :isbn10 %>
  </div>
  <div class="field">
    <%= f.label "ISBN 13桁" %><br>
    <%= f.text_field :isbn13, value: @isbn %>
  </div>
  <div class="field">
    <%= f.label "作品概要" %><br>
    <%= f.text_field :content, value: @itemCaption %>
  </div>
  <div class="field">
    <%= f.label "画像"%><br>
    <%= f.text_field :picture, value: @mediumImageUrl %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
