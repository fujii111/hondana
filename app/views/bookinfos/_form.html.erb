<%= form_for @bookinfo, :url => { :action => "confirm" } do |f| %>
	<% if @bookinfo.errors.any? %>
		<div id="error_explanation">
		<h2><%= pluralize(@bookinfo.errors.count, "") %>件のエラー</h2>
		<ul>
		<% @bookinfo.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
		</div>
	<% end %>

	<% if session[:entryflag] == "0" then %>
		<div class="field">
		<%= f.hidden_field :members_id %>
		</div>
		<div class="field">
		<%= f.label "タイトル" %><br>
		<%= f.text_field :name %>
		</div>
		<div class="field">
		<%= f.label "出版社" %><br>
		<%= f.text_field :publisher %>
		</div>
		<div class="field">
		<%= f.label "著者" %><br>
		<%= f.text_field :author %>
		</div>
		<div class="field">
		<%= f.label "発売日" %><br>
		<%= f.text_field :release_date %>
		</div>
		<div class="field">
		<%= f.label "ISBN(13桁)" %><br>
		<%= f.text_field :isbn13 %>
		</div>
		<div class="field">
		<%= f.label "作品概要" %><br>
		<%= f.text_area :content %>
		</div>
		<div class="field">
		<%= f.label "画像"%><br>
		<%= f.file_field :picture %>
		</div>
		<div class="actions">
		<%= f.submit %>
		</div>
	<% elsif session[:entryflag] == "1" then %>
		<% if session[:entryjson] != nil then %>
			<% @entryData = session[:entryjson] %>
		<% end %>
		<% @entryData['Items'].each do |item| %>
			<div class="field">
			<%= f.hidden_field :members_id %>
			</div>
			<div class="field">
			<%= f.label "タイトル" %><br>
			<%= f.text_field :name, value: item['Item']['title'] %>
			</div>
			<div class="field">
			<%= f.label "出版社" %><br>
			<%= f.text_field :publisher, value: item['Item']['publisherName'] %>
			</div>
			<div class="field">
			<%= f.label "著者" %><br>
			<%= f.text_field :author, value: item['Item']['author'] %>
			</div>
			<div class="field">
			<%= f.label "発売日" %><br>
			<%= f.text_field :release_date, value: item['Item']['salesDate'] %>
			</div>
			<div class="field">
			<%= f.label "ISBN(13桁)" %><br>
			<%= f.text_field :isbn13, value: item['Item']['isbn'] %>
			</div>
			<div class="field">
			<%= f.label "作品概要" %><br>
			<% if item['Item']['itemCaption'] == "" %>
				<%= f.text_area :content, value: "作品概要がありません。" %>
			<% else %>
				<%= f.text_area :content, value: item['Item']['itemCaption'] %>
			<% end %>
			</div>
			<div class="field">
			<%= f.label "画像"%><br>
			<%= image_tag(item['Item']['mediumImageUrl']) %>
			<%= f.hidden_field :picture, value: item['Item']['mediumImageUrl'] %>
			</div>
			<div class="actions">
			<%= f.submit %>
			</div>
		<% end %>
	<% end %>
<% end %>
