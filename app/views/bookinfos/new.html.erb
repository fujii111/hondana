<!-- サブタイトル -->
<%= provide(:title, "新規書籍登録") %>
<!-- ヘッダ -->
<%= render 'shared/header' %>

<!-- 本文 -->
<div id="main">
	<h3>新規書籍登録</h3>
	<p>書籍の登録をお願いします。（楽天ブックスから登録する場合、自動で入力されます。）</p>
	<%= render 'form' %>

	<%= form_tag :controller => 'search', :action => 'index' do %>
		<%= hidden_field_tag :keyword, session[:keyword] %>
		<%= submit_tag '戻る'%>
	<% end %>
</div>
