<!-- サブタイトル -->
<%= provide(:title, "蔵書詳細") %>
<!-- ヘッダ -->
<%= render 'shared/header' %>
<!-- 本文 -->
<div id="main">
	<p id="notice"><%= notice %></p>

	<div class="my_trade_list">
		<h3><%= @bookinfo.name %></h3>
		<div class="img_area">
			<p><img src="/assets/<%= @bookinfo.picture -%>" alt="<%= @bookinfo.name -%>" class="images"></p>
		</div>
		<div class="right_col">
			<div class="lists">
				<dl>
					<dt>著者</dt>
					<dd><%= @bookinfo.author -%></dd>
					<dt>出版社</dt>
					<dd><%= @bookinfo.publisher -%></dd>
					<dt>出版日</dt>
					<dd><%= @bookinfo.release_date %></dd>
					<dt>ISBN 13桁</dt>
					<dd><%= @bookinfo.isbn13 %></dd>
					<dt>作品概要</dt>
					<dd><%= @bookinfo.content %></dd>
					<br clear="both">
				</dl>
			</div>
		</div>
		<p style="clear:both;"></p>
		<%= link_to '編集', edit_bookinfo_path(@bookinfo) %> |
		<%= link_to '戻る', bookinfos_path %>
	</div>
</div>
