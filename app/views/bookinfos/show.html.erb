<!-- サブタイトル -->
<%= provide(:title, "書籍詳細") %>
<!-- ヘッダ -->
<%= render 'shared/header' %>
<!-- 本文 -->
<div id="main">
	<div class="my_trade_list">
		<h3><%= @bookinfo.name -%></h3>
		<div class="img_area">
			<p><img src="/assets/<%= @bookinfo.picture -%>" alt="<%= @bookinfo.name -%>" class="images"></p>
		</div>
		<div class="right_col">
			<div class="lists">
				<dl>
					<dt>タイトル</dt>
					<dd><%= @bookinfo.name -%></dd>
					<dt>著者</dt>
					<dd><%= @bookinfo.author -%></dd>
					<dt>出版社</dt>
					<dd><%= @bookinfo.publisher -%></dd>
					<dt>発売日</dt>
					<dd><%= @bookinfo.release_date -%></dd>
					<dt>ISBNコード</dt>
					<dd><%= @bookinfo.isbn13 -%></dd>
					<dt>作品概要</dt>
					<dd><%= @bookinfo.content -%></dd>
					<dt>最終更新</dt>
					<dd><%= @bookinfo.updated_at -%></dd>
				</dl>
			</div>
		</div>
	<p><%= link_to "編集", :controller => "bookinfo_edit", :action => "edit", :id => @bookinfo.id %> | <%= link_to 'Back', bookinfos_path %></p>
	</div>
</div>
