<!-- サブタイトル -->
<%= provide(:title, "会員向け告知") %>
<!-- ヘッダ -->
<%= render 'shared/header' %>

<!-- 本文 -->
<div id="main">
	<% @notice.each do |notice| %>
	<div class="msg_box">
		<div class="up_col">
			<div class="descript">
				<% if notice.read_flag == 0 then%>
				<p style="color: #f00;">New!!</p>
				<p> <%= notice.title %></p>
				<% else %>
					<p><%= notice.title %></p>
				<% end %>
			</div>
			<div class="ntc_paragram">
				<p><%= notice.created_at %></p>
			<p onclick="toggle('<%=notice.id%>');return false;"><a href="#">メッセージを表示する</a></p>
			</div>
		</div>
		<div id="<%=notice.id%>" class="msg_body">
				<% article = notice.content %>
				<%= auto_link(simple_format(article,class: :article), :html => { :target => "_blank" }) %>
		</div>
	</div>
<% end %>
</div><!-- 本文 ここまで -->