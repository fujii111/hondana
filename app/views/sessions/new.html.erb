<% provide(:title, "ログイン") %>
<h1>ログイン</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label "ログインID" %>
      <%= f.text_field :login_id %>

      <%= f.label "パスワード" %>
      <%= f.password_field :password %>

      <%= f.submit "ログイン", class: "btn btn-large btn-primary" %>
    <% end %>

    <p> <%= link_to "新規会員登録", signup_path %></p>
  </div>
</div>