<%= form_for @book, :url => { :action => "complete" } do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> 件のエラー</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div class="field">
    <%= f.hidden_field :members_id %>
  </div>

  <div class="field">
    <%= f.hidden_field :bookinfos_id %>
  </div>
  <div class="field">
    <%= f.label "縦" %><br>
    <%= f.hidden_field :height %>
    <%= @book.height%><%= f.label "mm"%>
  </div>
  <div class="field">
    <%= f.label "横" %><br>
    <%= f.hidden_field :width %>
    <%= @book.width%><%= f.label "mm"%>
  </div>
  <div class="field">
    <%= f.label "厚さ" %><br>
    <%= f.hidden_field :thick %>
    <%= @book.thick%><%= f.label "mm"%>
  </div>
  <div class="field">
    <%= f.label "重量" %><br>
    <%= f.hidden_field :weight %>
    <%= @book.weight%><%= f.label "g"%>
  </div>
<div class="field">
	<%= f.label "状態" %><br>
	<%= f.hidden_field :state %>
	<%= @state %>
  </div>
  <div class="field">
    <%= f.label "日焼け・変色" %><br>
	<%= f.hidden_field :sunburn %>
	<%= @sunburn %>
  </div>
  <div class="field">
    <%= f.label "スレ・傷など" %><br>
    <%= f.hidden_field :scar %>
    <%= @scar %>
  </div>
  <div class="field">
    <%= f.label "書き込み線引き" %><br>
    <%= f.hidden_field :graffiti %>
    <%= @graffiti %>

  </div>
  <div class="field">
    <%= f.label "ページの折れ" %><br>
    <%= f.hidden_field :broken %>
    <%= @broken %>
  </div>
  <div class="field">
    <%= f.label "帯あり" %><br>
    <%= f.hidden_field :obi%>
    <%= @obi %>
  </div>
  <div class="field">
    <%= f.label "たばこ臭" %><br>
    <%= f.hidden_field :smoke%>
    <%= @smoke %>
  </div>
  <div class="field">
     <%= f.label "ペットの有無" %><br>
    <%= f.hidden_field :pet %>
    <%= @pet %>
  </div>
  <div class="field">
    <%= f.label "カビ臭" %><br>
    <%= f.hidden_field :mold %>
    <%= @mold %>
  </div>
  <div class="field">
    <%= f.label "備考" %><br>
    <%= f.hidden_field :remarks %>
    <%= @book.remarks%>
  </div>

  <div class="actions">
    <%= f.submit%>
  </div>
</center>
<% end %>