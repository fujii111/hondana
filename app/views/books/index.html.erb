<!-- サブタイトル -->
<%= provide(:title, "新規書籍登録") %>
<!-- ヘッダ -->
<%= render 'shared/header' %>

<table>
  <thead><div id="main">
	<dl>
		<dt>タイトル</dt>
		<dd><input type="text" name="name" size="60" value=""></dd>
		<dt>出版社</dt>
		<dd><input type="text" name="publisher"></dd>
		<dt>著者名</dt>
		<dd><input type="text" name="author" size="20" value=""></dd>
		<dt>発売日（1993年5月10日発売の場合19930510と記入）</dt>
		<dd><input type="text" name="release_date" size="20"></dd>
		<dt>寸法</dt>
		<dt>縦</dt>
		<dd><input type="text" name="height" size="20" >mm</dd>
		<dt>横</dt>
		<dd><input type="text" name="width" size="20" >mm</dd>
		<dt>厚さ</dt>
		<dd><input type="text" name="thick" size="20" >mm</dd>
		<dt>ISBN10桁</dt>
		<dd><infput type="text" name="isbn10" size="50" maxlength="10"></dd>
		<dt>ISBN13桁</dt>
		<dd><input type="text" name="isbn13" size="50" maxlength="13"></dd>
		<dt>作品概要</dt>
		<textarea name="content" cols="50" rows="5"></textarea>
		<dt>画像のアップロード（任意）</dt>
		<dd><input type="file" name="picture" size="30" value="画像のアップロード"></dd>
	</dl>							
	<p id="btn_area">
		<input type="button" class=show" value="登録" onClick="location.href='l'">
		<input type = "button" value= "戻る" onclick="location.href='search.html'" >
	</p>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.members %></td>
        <td><%= book.bookinfos %></td>
        <td><%= book.height %></td>
        <td><%= book.width %></td>
        <td><%= book.thick %></td>
        <td><%= book.weight %></td>
        <td><%= book.state %></td>
        <td><%= book.sunburn %></td>
        <td><%= book.scar %></td>
        <td><%= book.graffiti %></td>
        <td><%= book.broken %></td>
        <td><%= book.obi %></td>
        <td><%= book.smoke %></td>
        <td><%= book.pet %></td>
        <td><%= book.mold %></td>
        <td><%= book.remarks %></td>
        <td><%= book.books_flag %></td>
        <td><%= book.entry_date %></td>
        <td><%= book.datetime %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
