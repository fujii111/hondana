<!-- サブタイトル -->
<%= provide(:title, "蔵書一覧") %>
<!-- ヘッダ -->
<%= render 'shared/header' %>

<!-- 本文 -->
<div id="main">

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.members_id %></td>
        <td><%= book.bookinfos_id %></td>
        <td><%= book.height %></td>
        <td><%= book.width %></td>
        <td><%= book.thick %></td>
        <td><%= book.weight %></td>
        <td><%= book.state %></td>
        <td><%= book.sunburn %></td>
        <td><%= book.scar %></td>
        <td><%= book.graffiti %></td>
        <td><%= book.broken %></td>
        <td><%= book.obi %></td>
        <td><%= book.smoke %></td>
        <td><%= book.pet %></td>
        <td><%= book.mold %></td>
        <td><%= book.remarks %></td>
        <td><%= book.books_flag %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Book', new_book_path %>
</div>
