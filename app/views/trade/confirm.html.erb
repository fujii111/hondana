<!-- サブタイトル -->
<%= provide(:title, "交換確認") %>
<!-- ヘッダ -->
<%= render 'shared/header' %>

<!-- 本文 -->
<% @books.each do |book| %>
<div id="main">
	<h2>確認</h2>
	<p>naoya_god さんに交換申請してよろしいですか？　以下の内容を確認してください。</p>
	<dl>
		<dt>タイトル</dt>
		<dd>人間失格</dd>
		<dt>著者名</dt>
		<dd>太宰治</dd>
		<dt>本の状態</dt>
		<dd><良好</dd>
		<dt>縦 x 横 x 厚さ</dt>
		<dd><%= book.height %>cm x <%= book.width %>cm x <%= book.thick %>cm</dd>
		<dt>重さ</dt>
		<dd><%= book.weight %>g</dd>
		<dt>その他状態・環境</dt>
		<dd>
			<dl>
				<dt>日焼けや変色：<%= book.sunburn %></dt>
				<dt>スレ・傷：<%= book.scar %></dt>
				<dt>書き込み・線引き：<%= book.graffiti %></dt>
				<dt>ページの折れ：<%= book.sunburn %></dt>
				<dt>帯：<%= book.obi %></dt>
				<dt>タバコ：<%= book.smoke %></dt>
				<dt>ペット：<%= book.pet %></dt>
				<dt>カビの臭い：<%= book.mold %></dt>
			</dl>
		</dd>
		<dt>備考</dt>
		<dd><%= book.remarks %></dd>
	</dl>
	<p id="btn_area">
		<input type = "button" value= "確定" class="big_btn" onclick="location.href='comp.html'">
		<input type = "button" value= "戻る" onclick="location.href='select.html'">
	</p>
</div>
<% end %>
<!-- 本文 ここまで -->