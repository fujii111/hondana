<!-- サブタイトル -->
<%= provide(:title, "プロフィール") %>
<!-- ヘッダ -->
<%= render 'shared/header' %>

<!-- 本文 -->
<div id="main">
	<div id="cust_body">
		<h3>会員情報</h3>
		<p class="headText">あなたの登録情報は以下の通りです。</p>
		<table>
			<tr>
				<th scope="row">ログインID</th>
				<td><%= $member.login_id %></td>
			</tr>
			<tr>
				<th scope="row">氏名</th>
				<td><%= $member.name %></td>
			</tr>
			<tr>
				<th scope="row">氏名(フリガナ)</th>
				<td><%= $member.kana %></td>
			</tr>
			<tr>
				<th scope="row">ニックネーム</th>
				<td><%= $member.nickname%></td>
			</tr>
			<tr>
				<th scope="row">メールアドレス</th>
				<td><%= $member.mail_address %></td>
			</tr>
			<tr>
				<th scope="row">パスワード</th>
				<td>セキュリティのため表示されません</td>
			</tr>
			<tr>
				<th scope="row">生年月日</th>
				<td>西暦<%= $member.birthday %></td>
			</tr>
			<tr>
				<th scope="row">住所</th>
				<td><%= $member.address %></td>
			</tr>
			<tr>
				<th scope="row">好きな作家</th>
				<td>
					<% $member.favorite_authors.each do |fav| %>
					<%= fav.author %><br>
					<% end %>
				</td>
			</tr>
			<tr>
				<th scope="row">好きなジャンル</th>
				<td>
					<% @genres.each do |genre| %>
					<%= genre.name %><br>
					<% end %>
				</td>
			</tr>
		</table>
		<p id="btn_area">
			<input type="button" value="プロフィール編集" class="big_btn" onclick="location.href='./edit.html'">
			<a href="leave.html" class="small">退会処理を行う</a>
		</p>
	</div>
</div><!-- 本文 ここまで -->