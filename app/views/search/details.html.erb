<!-- サブタイトル -->
<%= provide(:title, "詳細検索") %>
<!-- ヘッダ -->
<%= render 'shared/header' %>

<!-- 本文 -->
<div id="main">
	<h3>詳細検索</h3>
	<%= form_tag :controller => 'search', :action => 'search_details' do %>
	<dl>
		<dt>タイトル</dt>
  		<%= text_field_tag "details_title", session[:details_title] %>
		<dt>著者名</dt>
		<%= text_field_tag "details_author", session[:details_author] %>
		<dt>ISBN(10桁または13桁)</dt>
		<%= text_field_tag "details_isbn", session[:details_isbn] %>
		<dt>出版社</dt>
		<%= text_field_tag "details_publisher", session[:details_publisher] %>
	</dl>
	<p id="btn_area">
		<%= submit_tag "検索" %>
	</p>
	<% end %>
</div><!-- 本文 ここまで -->