<%= form_for @member,:url => { :action => "confirm" } do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count,"") %>件のエラー:</h2>

      <ul style="list-style:none;">
      <% @member.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div id="cust_body">
<table>
		<tr>
  			<th>
  				ログインID
  			</th>
		  	<td>
		    <%= f.text_field :login_id, :size=>"30"%>
		    </td>
	    </tr>
		<tr>
			<th>
				氏名
			</th>
			<td>
  			  <%= f.text_field :name %>
  			</td>
  		</tr>
  		<tr>
  			<th>
  				氏名（カナ）
  			</th>
  			<td>
  				<%= f.text_field :kana %>
  			</td>
  		</tr>
  		<tr>
  			<th>
  				ニックネーム
  			</th>
  			<td>
  				 <%= f.text_field :nickname %>
  			</td>
  		</tr>
  		<tr>
  			<th>
  				メールアドレス(半角英数字)
  			</th>
  			<td>
  				 <%= f.text_field :mail_address , :size=>"50"%>
  			</td>
  		</tr>
   		<tr>
  			<th>
  				生年月日(半角数字)
  			</th>
  			<td>
  				 <%= f.date_select :birthday,start_year:1930 ,end_year:Time.now.year-1%>
  			</td>
  		</tr>		
  		<tr>
  			<th>
  				パスワード（半角英数字）
  			</th>
  			<td>
  				 <%= f.password_field :password %>
  			</td>
  		</tr>
  		<tr>
  			<th>
  				パスワードの再入力
  			</th>
  			<td>
  				 <%= f.password_field :password_confirmation %>
  			</td>
  		</tr>
   		<tr>
  			<th>
  				住所
  			</th>
  			<td>
  				 <%= f.text_field :address , :size=>"50"%>
  			</td>
  		</tr>
</table>

  <div class="actions">
    <%= f.submit "確認"  %>

  </div>
</div>
<% end %>
